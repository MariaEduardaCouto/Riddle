<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoriddle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="259dp"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:autoText="false"
        android:fontFamily="@font/open_sans_condensed_light"
        android:gravity="center_horizontal"
        android:text="Share anonymously with your friends."
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="273dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:autoText="false"
        android:fontFamily="@font/open_sans_condensed_light"
        android:gravity="center_horizontal"
        android:text="I already have an account"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Sign" />

    <Button
        android:id="@+id/btn_Sign"
        android:layout_width="316dp"
        android:layout_height="75dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/custom_btn_signup"
        android:fontFamily="@font/open_sans_condensed_light"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#F99344"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>