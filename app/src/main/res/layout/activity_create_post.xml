<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scenes.create.CreatePostActivity"
    android:background="@drawable/gradient_background">

    <EditText
        android:id="@+id/txt_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#c5c6d9"
        android:fontFamily="@font/open_sans_condensed_light"
        android:textSize="34dp"
        android:gravity="center"
        android:text="Share a thought..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/close_post"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="352dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close_post" />

    <Button
        android:id="@+id/publish_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"

        android:background="@drawable/custom_btn_signup"
        android:fontFamily="@font/open_sans_condensed_light"
        android:text="Publish"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textStyle="bold"
        app:backgroundTint="#F99344"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"></Button>

    <EditText
        android:id="@+id/txt_color"
        android:layout_width="133dp"
        android:layout_height="56dp"

        android:background="@drawable/edit_input"
        android:drawableStart="@drawable/ic_color"
        android:drawablePadding="12dp"
        android:ems="10"
        android:paddingStart="8dp"
        android:text="Choose a color"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.493"></EditText>

</androidx.constraintlayout.widget.ConstraintLayout>